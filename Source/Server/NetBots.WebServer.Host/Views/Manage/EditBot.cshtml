@model PlayerBot

@{
    ViewBag.Title = "Edit Bot";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    @using (Html.BeginForm("EditBot", "Manage"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Id)
        
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new { @class = "form-control", style = "width:500px" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.URL, new { @class = "col-md-2 control-label", style = "width:500px" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.URL, new { @class = "form-control" })
            </div>
        </div>
        <input type="submit" value="Update Bot" class="btn btn-primary" />
    }

</div>