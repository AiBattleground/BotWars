@model NetBots.WebServer.Host.Models.SkirmishViewModel

@{
    ViewBag.Title = "Skirmish";
}

<h2>Skirmish</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PlayerBot</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SelectedBot1Id)
        @Html.HiddenFor(model => model.SelectedBot2Id)

        <div class="form-group">
            First Bot
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedBot1Id, Model.Bots)
            </div>
        </div>

        <div class="form-group">
            Second Bot
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedBot2Id, Model.Bots)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Skirmish" class="btn btn-default" />
            </div>
        </div>
    </div>
}

